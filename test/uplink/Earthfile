VERSION 0.6
# integration tests
test:
    FROM earthly/dind:ubuntu
    WORKDIR /go/storj-up
    COPY ../../+build-app/storj-up .
    # setup test environment
    RUN /go/storj-up/storj-up init minimal,db,uplink
