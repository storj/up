        RUN ./storj-up health && \
            docker compose exec -T -u 0 uplink bash -c 'storj-up credentials -s satellite-api:7777 -c satellite-api:10000 -e >> ~/.bashrc' && \
            < basic_upload_download.sh docker compose exec -T -u 0 uplink bash -i
    END